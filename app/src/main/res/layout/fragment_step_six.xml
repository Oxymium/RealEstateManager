<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="createViewModel"
            type="com.oxymium.realestatemanager.features.create.CreateViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/space_cadet"
        >

        <!-- ADDRESS PART -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/step_six_main_body"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingStart="@dimen/create_padding_extra"
            android:paddingEnd="@dimen/create_padding_extra"
            android:paddingTop="@dimen/create_padding_extra"
            android:paddingBottom="@dimen/create_padding_extra"
            android:background="@color/space_cadet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            >

            <Space
                android:id="@+id/step_six_top_space"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/step_six_address_part"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/step_six_address_part"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingStart="@dimen/create_padding_horizontal_margin"
                android:paddingEnd="@dimen/create_padding_horizontal_margin"
                android:paddingTop="@dimen/create_padding_vertical_margin"
                android:paddingBottom="@dimen/create_padding_vertical_margin"
                android:background="@drawable/circular_border"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/step_six_top_space">

                <!-- WRAPPER -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/independence"
                    >

                    <!-- STREET -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/step_six_street_part"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/create_padding_horizontal_margin"
                        android:paddingEnd="@dimen/create_padding_horizontal_margin"
                        android:paddingTop="@dimen/create_padding_vertical_margin"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        >

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/step_six_street"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/independence"
                            app:startIconDrawable="@drawable/ic_map_marker_white_24dp"
                            app:startIconTint="@color/white"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            app:hintTextColor="@color/white"
                            app:layout_constraintStart_toEndOf="@id/street_checker"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/street_checker"
                            app:layout_constraintBottom_toBottomOf="@id/street_checker"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/step_six_street_input"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@{createViewModel.street}"
                                android:hint="@string/layout_create_street_input_hint"
                                android:background="@color/space_cadet"
                                android:textColor="@color/green_500"
                                android:textStyle="bold"
                                android:textColorHint="@color/white"
                                android:inputType="text|textNoSuggestions"
                                android:textCursorDrawable="@null"
                                android:maxLines="1"
                                android:maxLength="40" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:id="@+id/street_checker"
                            android:layout_width="5dp"
                            android:layout_height="0dp"
                            app:checkerColor="@{createViewModel.street}"
                            android:background="@color/red_500"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- ZIPCODE -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/step_six_zipcode_part"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/create_padding_horizontal_margin"
                        android:paddingEnd="@dimen/create_padding_horizontal_margin"
                        android:paddingTop="@dimen/create_padding_vertical_margin"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/step_six_street_part"
                        >

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/step_six_zipcode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/independence"
                            app:startIconDrawable="@drawable/ic_numeric_white_24dp"
                            app:startIconTint="@color/white"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            app:hintTextColor="@color/white"
                            app:layout_constraintStart_toEndOf="@id/zipcode_checker"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/zipcode_checker"
                            app:layout_constraintBottom_toBottomOf="@id/zipcode_checker"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/step_six_zipcode_input"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@{createViewModel.zipCode.toString()}"
                                android:hint="@string/hint_zipCode"
                                android:background="@color/space_cadet"
                                android:textColor="@color/green_500"
                                android:textStyle="bold"
                                android:textColorHint="@color/white"
                                android:inputType="number"
                                android:textCursorDrawable="@null"
                                android:maxLines="1"
                                android:maxLength="6" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:id="@+id/zipcode_checker"
                            android:layout_width="5dp"
                            android:layout_height="0dp"
                            app:checkerColor="@{createViewModel.zipCode}"
                            android:background="@color/red_500"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- LOCATION -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/step_six_location_part"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/create_padding_horizontal_margin"
                        android:paddingEnd="@dimen/create_padding_horizontal_margin"
                        android:paddingTop="@dimen/create_padding_vertical_margin"
                        android:paddingBottom="@dimen/create_padding_vertical_margin"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/step_six_zipcode_part">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/step_six_location"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/independence"
                            app:startIconDrawable="@drawable/ic_home_city_white_24dp"
                            app:startIconTint="@color/white"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            app:hintTextColor="@color/white"
                            app:layout_constraintStart_toEndOf="@id/location_checker"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/location_checker"
                            app:layout_constraintBottom_toBottomOf="@id/location_checker"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/step_six_location_input"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@{createViewModel.location.toString()}"
                                android:hint="@string/layout_create_location_input_hint"
                                android:background="@color/space_cadet"
                                android:textColor="@color/green_500"
                                android:textStyle="bold"
                                android:textColorHint="@color/white"
                                android:inputType="text|textNoSuggestions"
                                android:textCursorDrawable="@null"
                                android:maxLines="1"
                                android:maxLength="25" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:id="@+id/location_checker"
                            android:layout_width="5dp"
                            android:layout_height="0dp"
                            app:checkerColor="@{createViewModel.location}"
                            android:background="@color/red_500"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:contentDescription="@string/icon_values"
                android:src="@drawable/baseline_map_24"
                app:tint="@color/yellow_500"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/step_six_address_part"
                app:layout_constraintBottom_toBottomOf="@id/step_six_top_space"
                app:layout_constraintHorizontal_bias="0.05" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textColor="@color/yellow_500"
                android:textStyle="italic|bold"
                android:textAlignment="textEnd"
                android:hint="@string/hint_address"
                android:textColorHint="@color/yellow_500"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/step_six_address_part"
                app:layout_constraintBottom_toBottomOf="@id/step_six_top_space"
                app:layout_constraintHorizontal_bias="0.95" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- NEARBY PLACES PART -->
        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/step_six_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingStart="@dimen/create_padding_extra"
            android:paddingEnd="@dimen/create_padding_extra"
            android:paddingTop="@dimen/create_padding_extra"
            android:paddingBottom="@dimen/create_padding_extra"
            android:background="@color/space_cadet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/step_six_main_body"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_weight="50"
            >

            <Space
                android:id="@+id/layout_nearby_places_top_space"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/step_six_nearby_places_part"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/step_six_nearby_places_part"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingStart="1dp"
                android:paddingEnd="1dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:background="@drawable/circular_border"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_nearby_places_top_space"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/step_six_nearby_places_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    tools:listitem="@layout/item_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:contentDescription="@string/icon_type"
                android:src="@drawable/home_city"
                app:tint="@color/yellow_500"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/step_six_nearby_places_part"
                app:layout_constraintBottom_toBottomOf="@id/layout_nearby_places_top_space"
                app:layout_constraintHorizontal_bias="0.05" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textColor="@color/yellow_500"
                android:textStyle="italic|bold"
                android:textAlignment="textEnd"
                android:hint="@string/hint_nearby_places"
                android:textColorHint="@color/yellow_500"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/step_six_nearby_places_part"
                app:layout_constraintBottom_toBottomOf="@id/layout_nearby_places_top_space"
                app:layout_constraintHorizontal_bias="0.95" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>