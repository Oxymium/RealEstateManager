<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="agent"
            type="com.oxymium.realestatemanager.model.Agent"/>
        <variable
            name="agentListener"
            type="com.oxymium.realestatemanager.utils.AgentListener"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/item_agent_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{ () -> agentListener.onClickAgent(agent) }"
            card_view:cardUseCompatPadding="true"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardBackgroundColor="@color/space_cadet"
            app:agentSelector="@{agent.selected}"
            card_view:cardCornerRadius="5dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                >

                <TextView
                    android:id="@+id/item_agent_firstname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{agent.firstName}"
                    android:textSize="@dimen/item_estate_font_small"
                    app:agentTextColor="@{agent.selected}"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:hint="firstname"
                    android:textColorHint="@color/white"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintBottom_toTopOf="@id/item_agent_lastname"
                    />

                <TextView
                    android:id="@+id/item_agent_lastname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{agent.lastName}"
                    android:textSize="@dimen/item_estate_font_small"
                    app:agentTextColor="@{agent.selected}"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:hint="lastname"
                    android:textColorHint="@color/white"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@id/item_agent_firstname"
                    />

                <TextView
                    android:id="@+id/item_agent_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{agent.phoneNumber}"
                    android:textSize="@dimen/item_estate_font_small"
                    app:agentTextColor="@{agent.selected}"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:hint="phone"
                    android:textColorHint="@color/white"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@id/item_agent_lastname"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>