<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="picture"
            type="com.oxymium.realestatemanager.model.Picture"/>
        <variable
            name="pictureClickListener"
            type="com.oxymium.realestatemanager.utils.PictureListener"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/item_picture_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardUseCompatPadding="true"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardElevation="3dp"
            card_view:cardMaxElevation="3dp"
            card_view:cardCornerRadius="5dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/item_picture_picture"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/item_estate_description_picture"
                    android:src="@color/space_cadet"
                    card_view:layout_constraintDimensionRatio="H,1:1"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" />

                <!-- Top part -->

                <View
                    android:id="@+id/item_picture_part_top"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="#7F000000"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintHeight_percent="0.1"
                    card_view:layout_constraintVertical_bias="0"
                    />

                <TextView
                    android:id="@+id/item_estate_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bathroom"
                    android:textSize="@dimen/item_estate_font_small"
                    android:textColor="@color/isabelline"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:hint="@string/item_estate_hint_rooms"
                    android:textColorHint="@color/white"
                    card_view:layout_constraintStart_toStartOf="@id/item_picture_part_top"
                    card_view:layout_constraintEnd_toEndOf="@id/item_picture_part_top"
                    card_view:layout_constraintTop_toTopOf="@id/item_picture_part_top"
                    card_view:layout_constraintBottom_toBottomOf="@id/item_picture_part_top"
                    card_view:layout_constraintHorizontal_bias="0.5"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>