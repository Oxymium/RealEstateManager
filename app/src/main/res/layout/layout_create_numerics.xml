<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="createViewModel"
            type="com.oxymium.realestatemanager.viewmodel.CreateViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/create_padding_extra"
        android:paddingEnd="@dimen/create_padding_extra"
        android:paddingTop="@dimen/create_padding_extra"
        android:paddingBottom="@dimen/create_padding_extra"
        android:background="@color/independence"
        tools:context=".CreateFragment">

        <Space
            android:id="@+id/layout_create_numerics_top_space"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layout_create_numerics"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_create_numerics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_create_numerics_top_space">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_create_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:startIconDrawable="@drawable/ic_currency_usd_white_24dp"
                app:startIconTint="@color/white"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                app:hintTextColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/layout_create_price_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/layout_create_price_input_hint"
                    android:background="@color/space_cadet"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:inputType="text|textNoSuggestions"
                    android:textCursorDrawable="@null"
                    android:maxLines="1"
                    android:maxLength="25" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_create_surface"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:startIconDrawable="@drawable/ic_texture_box_white_24dp"
                app:startIconTint="@color/white"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                app:hintTextColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_create_price"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/layout_create_surface_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/layout_create_surface_input_hint"
                    android:background="@color/space_cadet"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:inputType="text|textNoSuggestions"
                    android:textCursorDrawable="@null"
                    android:maxLines="1"
                    android:maxLength="25" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_create_rooms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:startIconDrawable="@drawable/ic_crop_square_white_24dp"
                app:startIconTint="@color/white"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                app:hintTextColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/layout_create_bedrooms"
                app:layout_constraintTop_toBottomOf="@id/layout_create_surface"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/layout_create_rooms_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Rooms"
                    android:background="@color/space_cadet"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:inputType="text|textNoSuggestions"
                    android:textCursorDrawable="@null"
                    android:maxLines="1"
                    android:maxLength="25" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_create_bedrooms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:startIconDrawable="@drawable/ic_bed_white_24dp"
                app:startIconTint="@color/white"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                app:hintTextColor="@color/white"
                app:layout_constraintStart_toEndOf="@id/layout_create_rooms"
                app:layout_constraintEnd_toStartOf="@id/layout_create_bathrooms"
                app:layout_constraintTop_toBottomOf="@id/layout_create_surface"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/layout_create_bedrooms_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Bedrooms"
                    android:background="@color/space_cadet"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:inputType="text|textNoSuggestions"
                    android:textCursorDrawable="@null"
                    android:maxLines="1"
                    android:maxLength="25" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_create_bathrooms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:startIconDrawable="@drawable/ic_shower_white_24dp"
                app:startIconTint="@color/white"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                app:hintTextColor="@color/white"
                app:layout_constraintStart_toEndOf="@id/layout_create_bedrooms"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_create_surface"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/layout_create_bathrooms_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Bathrooms"
                    android:background="@color/space_cadet"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:inputType="text|textNoSuggestions"
                    android:textCursorDrawable="@null"
                    android:maxLines="1"
                    android:maxLength="25" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/layout_create_numerics_title"
            android:textColor="@color/white"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/layout_create_numerics"
            app:layout_constraintBottom_toBottomOf="@id/layout_create_numerics_top_space"
            app:layout_constraintHorizontal_bias="0.95" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/layout_create_numerics_picture"
            android:src="@drawable/ic_numeric_white_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/layout_create_numerics"
            app:layout_constraintBottom_toBottomOf="@id/layout_create_numerics_top_space"
            app:layout_constraintHorizontal_bias="0.05" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>