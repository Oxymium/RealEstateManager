<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="createViewModel"
            type="com.oxymium.realestatemanager.viewmodel.CreateViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/create_padding_extra"
        android:paddingEnd="@dimen/create_padding_extra"
        android:paddingTop="@dimen/create_padding_extra"
        android:paddingBottom="@dimen/create_padding_extra"
        android:background="@color/independence"
        tools:context=".CreateFragment">

        <Space
            android:id="@+id/layout_create_secondary_pictures_top_space"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layout_create_secondary_pictures"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_create_secondary_pictures"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circular_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_create_secondary_pictures_top_space">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/layout_create_secondary_pictures_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layoutManager="GridLayoutManager"
                app:spanCount="3"
                android:orientation="vertical"
                tools:listitem="@layout/item_picture"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/layout_create_secondary_pictures_title"
            android:textColor="@color/white"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/layout_create_secondary_pictures"
            app:layout_constraintBottom_toBottomOf="@id/layout_create_secondary_pictures_top_space"
            app:layout_constraintHorizontal_bias="0.95" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/layout_create_secondary_pictures_picture"
            android:src="@drawable/ic_image_multiple_outline_white_24dp"
            app:tint="@color/yellow_500"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/layout_create_secondary_pictures"
            app:layout_constraintBottom_toBottomOf="@id/layout_create_secondary_pictures_top_space"
            app:layout_constraintHorizontal_bias="0.05" />

        <ImageButton
            android:id="@+id/layout_create_secondary_pictures_add_secondaryPicture_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_plus_box_white_24dp"
            android:backgroundTint="@color/independence"
            android:onClick="@{() -> createViewModel.onClickAddSecondaryPictureButton()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/layout_create_secondary_pictures"
            app:layout_constraintBottom_toBottomOf="@id/layout_create_secondary_pictures_top_space"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
