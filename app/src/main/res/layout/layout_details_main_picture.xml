<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="estateViewModel"
            type="com.oxymium.realestatemanager.viewmodel.EstateViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/layout_details_main_picture"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:background="@drawable/dot_grid_repeating"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/layout_details_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7F000000"
            android:text="@{`Sold: ` + estateViewModel.selectedEstate.soldDate}"
            android:textAlignment="center"
            app:soldVisibility="@{estateViewModel.selectedEstate.wasSold}"
            android:textSize="@dimen/details_font_medium"
            android:textStyle="bold"
            android:textColor="@color/red_500"
            android:hint="wasSold"
            android:drawablePadding="2dp"
            android:textColorHint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_details_secondary_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7F000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/layout_details_main_picture"
            >

            <TextView
                android:id="@+id/layout_details_surface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{String.valueOf(estateViewModel.selectedEstate.surface + "mÂ²")}'
                android:textSize="@dimen/details_font_medium"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:paddingBottom="2dp"
                android:hint="@string/fragment_details_hint_surface"
                android:textColorHint="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/layout_details_rooms"
                app:layout_constraintBottom_toBottomOf="@id/layout_details_secondary_info"
                />

            <TextView
                android:id="@+id/layout_details_rooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@{String.valueOf(estateViewModel.selectedEstate.rooms)}"
                android:textSize="@dimen/details_font_medium"
                android:textColor="@color/white"
                android:hint="@string/fragment_details_hint_rooms"
                android:textColorHint="@color/white"
                app:drawableStartCompat="@drawable/ic_crop_square_white_24dp"
                app:layout_constraintStart_toEndOf="@id/layout_details_surface"
                app:layout_constraintEnd_toStartOf="@id/layout_details_bedrooms"
                app:layout_constraintBottom_toBottomOf="@id/layout_details_secondary_info"
                />

            <TextView
                android:id="@+id/layout_details_bedrooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@{String.valueOf(estateViewModel.selectedEstate.rooms)}"
                android:textSize="@dimen/details_font_medium"
                android:textColor="@color/white"
                android:hint="@string/fragment_details_hint_rooms"
                android:textColorHint="@color/white"
                app:drawableStartCompat="@drawable/ic_bed_white_24dp"
                android:drawablePadding="2dp"
                app:layout_constraintStart_toEndOf="@id/layout_details_rooms"
                app:layout_constraintEnd_toStartOf="@id/layout_details_bathrooms"
                app:layout_constraintBottom_toBottomOf="@id/layout_details_secondary_info"
                />

            <TextView
                android:id="@+id/layout_details_bathrooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@{String.valueOf(estateViewModel.selectedEstate.rooms)}"
                android:textSize="@dimen/details_font_medium"
                android:textColor="@color/white"
                android:hint="@string/fragment_details_hint_rooms"
                android:drawablePadding="2dp"
                android:textColorHint="@color/white"
                app:drawableStartCompat="@drawable/ic_shower_white_24dp"
                app:layout_constraintStart_toEndOf="@id/layout_details_bedrooms"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/layout_details_secondary_info"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>