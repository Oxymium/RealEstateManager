<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="estateViewModel"
            type="com.oxymium.realestatemanager.viewmodel.EstateViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/space_cadet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/layout_details_icon_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_calendar_clock_white_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            />

        <TextView
            android:id="@+id/layout_details_added_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:convertTimeInMillisToDate="@{estateViewModel.selectedEstate.addedDate}"
            android:textSize="@dimen/details_font_medium"
            android:textColor="@color/white"
            android:textAlignment="viewStart"
            android:hint="Added date"
            android:textColorHint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_details_icon_date"
            app:layout_constraintHorizontal_bias="0.5" />

        <ImageView
            android:id="@+id/layout_details_icon_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_comment_edit_white_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_details_added_date"
            app:layout_constraintHorizontal_bias="0.5"
            />

        <TextView
            android:id="@+id/layout_details_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{estateViewModel.selectedEstate.description}'
            android:textSize="@dimen/details_font_medium"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:hint="Description"
            android:textColorHint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_details_icon_description"
            app:layout_constraintHorizontal_bias="0.5"
            />

        <ImageView
            android:id="@+id/layout_details_icon_nearby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_google_nearby_white_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_details_description"
            />

        <TextView
            android:id="@+id/layout_details_nearby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{estateViewModel.selectedEstate.nearbyPlaces}'
            android:textSize="@dimen/details_font_medium"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:hint="Nearby places"
            android:textColorHint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_details_icon_nearby"
            app:layout_constraintHorizontal_bias="0.5"
            />

        <ImageView
            android:id="@+id/layout_details_icon_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_map_marker_white_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_details_nearby"
            app:layout_constraintHorizontal_bias="0.5"
            />

        <TextView
            android:id="@+id/layout_details_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{estateViewModel.selectedEstate.address}'
            android:textSize="@dimen/details_font_medium"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:hint="Address"
            android:textColorHint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_details_icon_address"
            app:layout_constraintHorizontal_bias="0.5"
            />

        <TextView
            android:id="@+id/layout_details_zipCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{String.valueOf(estateViewModel.selectedEstate.zipCode)}'
            android:textSize="@dimen/details_font_medium"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:hint="ZipCode"
            android:textColorHint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_details_address"
            app:layout_constraintHorizontal_bias="0.5"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

