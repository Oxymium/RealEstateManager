<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="createEstateViewModel"
            type="com.oxymium.realestatemanager.viewmodel.CreateViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/space_cadet"
        >

        <TextView
            android:id="@+id/create_placeholder_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="「Create」"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/create_placeholder_icon"
            />

        <TextView
            android:id="@+id/create_placeholder_edited_estate_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edited Estate n° XXXX"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/create_placeholder_type"
            app:layout_constraintBottom_toTopOf="@id/create_placeholder_icon"
            />

        <ImageView
            android:id="@+id/create_placeholder_icon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/estates"
            app:tint="@color/independence"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.5"
            />

        <TextView
            android:id="@+id/placeholder_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proceed through the 6 steps"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/create_placeholder_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>