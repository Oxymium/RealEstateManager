<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="createViewModel"
            type="com.oxymium.realestatemanager.features.create.CreateViewModel"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/space_cadet">

            <!-- STEP 1: AGENT -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/overview_step_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/create_padding_horizontal_margin"
                android:layout_marginVertical="@dimen/create_padding_vertical_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

                <!-- TOP -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overview_step_1_top"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_1_middle"
                    />

                <!-- BOTTOM -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overview_step_1_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overview_step_1_middle"
                    />

                <!-- MIDDLE -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overview_step_1_middle"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:overviewLayoutColor="@{createViewModel.estateState.estate.agent_id != null}"
                    android:background="@drawable/circular_border"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_1_bottom"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Agent"
                        app:overviewTextColor="@{createViewModel.estateState.estate.agent_id != null}"
                        android:textAlignment="center"
                        android:textColorHint="@color/independence"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/agent"
                    app:tint="@color/overview_main_color"
                    app:overviewIconTint="@{createViewModel.estateState.estate.agent_id != null}"
                    android:background="@color/space_cadet"
                    android:contentDescription="@string/icon_agent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overview_step_1_top"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_1_middle"
                    app:layout_constraintHorizontal_bias="0.05"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/create_padding_horizontal_margin"
                    android:layout_marginVertical="@dimen/create_padding_vertical_margin"
                    android:background="@drawable/overview_squares_red"
                    app:overviewStepColor="@{createViewModel.estateState.estate.agent_id != null}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overview_step_1_middle"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_1_bottom"
                    app:layout_constraintHorizontal_bias="0.95"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- STEP 2: TYPE -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/overview_step_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/create_padding_horizontal_margin"
                android:layout_marginVertical="@dimen/create_padding_vertical_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/overview_step_1"
                >

                <!-- TOP -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overview_step_2_top"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_2_middle"
                    />

                <!-- BOTTOM -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overview_step_2_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overview_step_2_middle"
                    />

                <!-- MIDDLE -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overview_step_2_middle"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:overviewLayoutColor="@{createViewModel.estateState.estate.type != null}"
                    android:background="@drawable/circular_border"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_2_bottom"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Type"
                        app:overviewTextColor="@{createViewModel.estateState.estate.type != null}"
                        android:textColor="@color/overview_main_color"
                        android:textAlignment="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/type"
                    app:tint="@color/overview_main_color"
                    app:overviewIconTint="@{createViewModel.estateState.estate.type != null}"
                    android:background="@color/space_cadet"
                    android:contentDescription="@string/icon_estates"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overview_step_2_top"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_2_middle"
                    app:layout_constraintHorizontal_bias="0.05"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/create_padding_horizontal_margin"
                    android:layout_marginVertical="@dimen/create_padding_vertical_margin"
                    android:background="@drawable/overview_squares_red"
                    app:overviewStepColor="@{createViewModel.estateState.estate.type != null}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overview_step_2_middle"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_2_bottom"
                    app:layout_constraintHorizontal_bias="0.95"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- STEP 3: VALUES -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/overview_step_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/create_padding_horizontal_margin"
                android:layout_marginVertical="@dimen/create_padding_vertical_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/overview_step_2"
                >

                <!-- TOP -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overview_step_3_top"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_3_middle"
                    />

                <!-- BOTTOM -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overview_step_3_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overview_step_3_middle"
                    />

                <!-- MIDDLE -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overview_step_3_middle"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:overviewLayoutColor="@{createViewModel.estateState.estate.price != null &amp;&amp; createViewModel.estateState.estate.surface != null &amp;&amp; createViewModel.estateState.estate.rooms != null &amp;&amp; createViewModel.estateState.estate.bedrooms != null &amp;&amp; createViewModel.estateState.estate.bathrooms != null &amp;&amp; createViewModel.estateState.estate.energyScore != null }"
                    android:background="@drawable/circular_border"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_3_bottom"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Values"
                        app:overviewTextColor="@{createViewModel.estateState.estate.price != null &amp;&amp; createViewModel.estateState.estate.surface != null &amp;&amp; createViewModel.estateState.estate.rooms != null &amp;&amp; createViewModel.estateState.estate.bedrooms != null &amp;&amp; createViewModel.estateState.estate.bathrooms != null &amp;&amp; createViewModel.estateState.estate.energyScore != null }"
                        android:textColor="@color/overview_main_color"
                        android:textAlignment="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/values"
                    app:tint="@color/overview_main_color"
                    app:overviewIconTint="@{createViewModel.estateState.estate.price != null &amp;&amp; createViewModel.estateState.estate.surface != null &amp;&amp; createViewModel.estateState.estate.rooms != null &amp;&amp; createViewModel.estateState.estate.bedrooms != null &amp;&amp; createViewModel.estateState.estate.bathrooms != null &amp;&amp; createViewModel.estateState.estate.energyScore != null }"
                    android:background="@color/space_cadet"
                    android:contentDescription="@string/icon_values"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overview_step_3_top"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_3_middle"
                    app:layout_constraintHorizontal_bias="0.05"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/create_padding_horizontal_margin"
                    android:layout_marginVertical="@dimen/create_padding_vertical_margin"
                    android:background="@drawable/overview_squares_red"
                    app:overviewStepColor="@{createViewModel.estateState.estate.price != null &amp;&amp; createViewModel.estateState.estate.surface != null &amp;&amp; createViewModel.estateState.estate.rooms != null &amp;&amp; createViewModel.estateState.estate.bedrooms != null &amp;&amp; createViewModel.estateState.estate.bathrooms != null &amp;&amp; createViewModel.estateState.estate.energyScore != null }"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overview_step_3_middle"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_3_bottom"
                    app:layout_constraintHorizontal_bias="0.95"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- STEP 4: MAIN PICTURE -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/overview_step_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/create_padding_horizontal_margin"
                android:layout_marginVertical="@dimen/create_padding_vertical_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/overview_step_3"
                >

                <!-- TOP -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overview_step_4_top"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_4_middle"
                    />

                <!-- BOTTOM -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overview_step_4_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overview_step_4_middle"
                    />

                <!-- MIDDLE -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overview_step_4_middle"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:overviewLayoutColor="@{createViewModel.estateState.estate.mainPicturePath != null}"
                    android:background="@drawable/circular_border"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_4_bottom"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Main Picture"
                        app:overviewTextColor="@{createViewModel.estateState.estate.mainPicturePath != null}"
                        android:textColor="@color/overview_main_color"
                        android:textAlignment="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/picture"
                    app:tint="@color/overview_main_color"
                    app:overviewIconTint="@{createViewModel.estateState.estate.mainPicturePath != null}"
                    android:background="@color/space_cadet"
                    android:contentDescription="@string/icon_picture"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overview_step_4_top"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_4_middle"
                    app:layout_constraintHorizontal_bias="0.05"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/create_padding_horizontal_margin"
                    android:layout_marginVertical="@dimen/create_padding_vertical_margin"
                    android:background="@drawable/overview_squares_red"
                    app:overviewStepColor="@{createViewModel.estateState.estate.mainPicturePath != null}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overview_step_4_middle"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_4_bottom"
                    app:layout_constraintHorizontal_bias="0.95"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- STEP 5: SECONDARY PICTURES -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/overview_step_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/create_padding_horizontal_margin"
                android:layout_marginVertical="@dimen/create_padding_vertical_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/overview_step_4"
                >

                <!-- TOP -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overview_step_5_top"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_5_middle"
                    />

                <!-- BOTTOM -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overview_step_5_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overview_step_5_middle"
                    />

                <!-- MIDDLE -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overview_step_5_middle"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:overviewLayoutColor="@{createViewModel.secondaryPictures.size() != 0}"
                    android:background="@drawable/circular_border"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_5_bottom"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Secondary Pictures"
                        app:overviewTextColor="@{createViewModel.secondaryPictures.size() != 0}"
                        android:textColor="@color/overview_main_color"
                        android:textAlignment="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/picture_multiple"
                    app:tint="@color/overview_main_color"
                    app:overviewIconTint="@{createViewModel.secondaryPictures.size() != 0}"
                    android:background="@color/space_cadet"
                    android:contentDescription="@string/icon_picture_multiple"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overview_step_5_top"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_5_middle"
                    app:layout_constraintHorizontal_bias="0.05"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/create_padding_horizontal_margin"
                    android:layout_marginVertical="@dimen/create_padding_vertical_margin"
                    android:background="@drawable/overview_squares_red"
                    app:overviewStepColor="@{createViewModel.secondaryPictures.size() != 0}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overview_step_5_middle"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_5_bottom"
                    app:layout_constraintHorizontal_bias="0.95"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- STEP 6: MISC -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/overview_step_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/create_padding_horizontal_margin"
                android:layout_marginVertical="@dimen/create_padding_vertical_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/overview_step_5"
                >

                <!-- TOP -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overview_step_6_top"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_6_middle"
                    />

                <!-- BOTTOM -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overview_step_6_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overview_step_6_middle"
                    />

                <!-- MIDDLE -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overview_step_6_middle"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:overviewLayoutColor="@{createViewModel.estateState.estate.description != null}"
                    android:background="@drawable/circular_border"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_6_bottom"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Miscellaneous"
                        app:overviewTextColor="@{createViewModel.estateState.estate.description != null}"
                        android:textColor="@color/overview_main_color"
                        android:textAlignment="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/miscellaneous"
                    app:tint="@color/overview_main_color"
                    app:overviewIconTint="@{createViewModel.estateState.estate.description != null}"
                    android:background="@color/space_cadet"
                    android:contentDescription="@string/icon_miscellaneous"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overview_step_6_top"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_6_middle"
                    app:layout_constraintHorizontal_bias="0.05"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/create_padding_horizontal_margin"
                    android:layout_marginVertical="@dimen/create_padding_vertical_margin"
                    android:background="@drawable/overview_squares_red"
                    app:overviewStepColor="@{createViewModel.estateState.estate.description != null}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overview_step_6_middle"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_6_bottom"
                    app:layout_constraintHorizontal_bias="0.95"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- STEP 7: ADDRESS -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/overview_step_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/create_padding_horizontal_margin"
                android:layout_marginVertical="@dimen/create_padding_vertical_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/overview_step_6"
                >

                <!-- TOP -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overview_step_7_top"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_7_middle"
                    />

                <!-- BOTTOM -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overview_step_7_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overview_step_7_middle"
                    />

                <!-- MIDDLE -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overview_step_7_middle"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:overviewLayoutColor="@{createViewModel.estateState.estate.street != null &amp;&amp; createViewModel.estateState.estate.zipCode != null &amp;&amp; createViewModel.estateState.estate.location != null }"
                    android:background="@drawable/circular_border"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_7_bottom"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        app:overviewTextColor="@{createViewModel.estateState.estate.street != null &amp;&amp; createViewModel.estateState.estate.zipCode != null &amp;&amp; createViewModel.estateState.estate.location != null }"
                        android:textColor="@color/overview_main_color"
                        android:textAlignment="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zipcode"
                    app:tint="@color/overview_main_color"
                    app:overviewIconTint="@{createViewModel.estateState.estate.street != null &amp;&amp; createViewModel.estateState.estate.zipCode != null &amp;&amp; createViewModel.estateState.estate.location != null }"
                    android:background="@color/space_cadet"
                    android:contentDescription="@string/icon_zipcode"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overview_step_7_top"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_7_middle"
                    app:layout_constraintHorizontal_bias="0.05"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/create_padding_horizontal_margin"
                    android:layout_marginVertical="@dimen/create_padding_vertical_margin"
                    android:background="@drawable/overview_squares_red"
                    app:overviewStepColor="@{createViewModel.estateState.estate.street != null &amp;&amp; createViewModel.estateState.estate.zipCode != null &amp;&amp; createViewModel.estateState.estate.location != null }"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overview_step_7_middle"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_7_bottom"
                    app:layout_constraintHorizontal_bias="0.95"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- STEP 8: NEARBY PLACES -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/overview_step_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/create_padding_horizontal_margin"
                android:layout_marginVertical="@dimen/create_padding_vertical_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/overview_step_7"
                >

                <!-- TOP -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overview_step_8_top"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_8_middle"
                    />

                <!-- BOTTOM -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overview_step_8_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overview_step_8_middle"
                    />

                <!-- MIDDLE -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overview_step_8_middle"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:overviewLayoutColor="@{createViewModel.estateState.estate.nearbyPlaces != null}"
                    android:background="@drawable/circular_border"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_8_bottom"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Nearby Places"
                        app:overviewTextColor="@{createViewModel.estateState.estate.nearbyPlaces != null}"
                        android:textColor="@color/overview_main_color"
                        android:textAlignment="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/labels"
                    app:tint="@color/overview_main_color"
                    app:overviewIconTint="@{createViewModel.estateState.estate.nearbyPlaces != null}"
                    android:background="@color/space_cadet"
                    android:contentDescription="@string/icon_labels"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overview_step_8_top"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_8_middle"
                    app:layout_constraintHorizontal_bias="0.05"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/create_padding_horizontal_margin"
                    android:layout_marginVertical="@dimen/create_padding_vertical_margin"
                    android:background="@drawable/overview_squares_red"
                    app:overviewStepColor="@{createViewModel.estateState.estate.nearbyPlaces != null }"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overview_step_8_middle"
                    app:layout_constraintBottom_toTopOf="@id/overview_step_8_bottom"
                    app:layout_constraintHorizontal_bias="0.95"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>